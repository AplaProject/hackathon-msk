                    Span(âœ“)
                }
            }
            Table(Source: bridge_registry, Columns: " =icon, Area=area,Address=address,Price=curr_price,=action")
        }
        Div(panel-footer){
            Div(clearfix){
                Form(pull-right){

                }
                }
            }
        }
    }
}